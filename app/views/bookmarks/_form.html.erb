<%= form_with model: [list, bookmark], local: true, class: 'mb-4' do |f| %>
  <div class="form-group">
    <%= f.label :movie_id, "Select a movie", class: 'form-label' %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, {}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :comment, class: 'form-label' %>
    <%= f.text_field :comment, class: 'form-control' %>
  </div>
  <%= f.submit 'Add Bookmark', class: 'btn btn-success mt-3' %>
<% end %>

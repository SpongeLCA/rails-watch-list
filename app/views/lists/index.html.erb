<div class="container mt-4">
  <div class="text-center mb-4">
    <h1 class="display-4">Save any kind of movies</h1>
    <h2 class="lead">Classic</h2>
  </div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <% if list.image_url.present? %>
            <img src="<%= list.image_url %>" class="card-img-top fixed-size-image" alt="<%= list.name %>">
          <% end %>
          <div class="card-body p-0">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-white"><%= link_to list.name, list, class: 'stretched-link' %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
